                        android:textColor="@color/blanco"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/person_age91"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/person_name91"
                        android:layout_toRightOf="@+id/person_photo91"
                        android:text="Cordoba,Veracruz"
                        android:textColor="@color/blanco" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>