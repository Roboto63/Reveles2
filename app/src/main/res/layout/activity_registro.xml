<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loguinopciondos"
    tools:context="com.example.roberto.reveles.RegistroActivity"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/nombreusuario"
        android:layout_width="296dp"
        android:layout_height="37dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="108dp"
        android:background="@mipmap/fondotexto"
        android:ems="10"
        android:hint="Nombre Usuario"
        android:inputType="textPersonName"
        android:textColorHint="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/registrousername"
        android:layout_width="296dp"
        android:layout_height="37dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="165dp"
        android:background="@mipmap/fondotexto"
        android:ems="10"
        android:hint="Correo"
        android:inputType="textPersonName"
        android:textColorHint="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/registropassword"
        android:layout_width="296dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:background="@mipmap/fondotexto"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:textColorHint="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/registrousername"
        app:layout_constraintTop_toBottomOf="@+id/registrousername" />

    <Button
        android:id="@+id/button4"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:onClick="registrado"
        android:text="Registrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registropassword" />

</android.support.constraint.ConstraintLayout>
