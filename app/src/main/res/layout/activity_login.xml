<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loguinopciondos"
    tools:context="com.example.roberto.reveles.LoginActivity">

    <EditText
        android:id="@+id/registrousername"
        android:layout_width="296dp"
        android:layout_height="37dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:background="@mipmap/fondotexto"
        android:ems="10"
        android:hint="Correo"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.439" />

    <EditText
        android:id="@+id/registropassword"
        android:layout_width="296dp"
        android:layout_height="38dp"
        android:layout_marginBottom="244dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="40dp"
        android:background="@mipmap/fondotexto"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="111dp"
        android:layout_height="27dp"
        android:layout_marginBottom="196dp"
        android:layout_marginEnd="55dp"
        android:layout_marginStart="40dp"
        android:background="@mipmap/botonlogin"
        android:onClick="login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="111dp"
        android:layout_height="27dp"
        android:layout_marginBottom="196dp"
        android:layout_marginEnd="60dp"
        android:background="@mipmap/botonsingup"
        android:onClick="registrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_marginBottom="64dp"
        android:background="@mipmap/goog"
        android:onClick="entrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_marginBottom="64dp"
        android:background="@mipmap/twit"
        android:onClick="entrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.661"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_marginBottom="64dp"
        android:background="@mipmap/face"
        android:onClick="entrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="252dp"
        android:layout_height="85dp"
        android:layout_marginBottom="452dp"
        android:text="Reveles"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
