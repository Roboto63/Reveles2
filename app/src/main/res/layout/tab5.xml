<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graylight">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/blanco">

                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blanco"
                    android:padding="16dp">

                    <ImageButton
                        android:id="@+id/person_photo9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="16dp"
                        android:background="@mipmap/goog"
                        android:onClick="mover" />

                    <TextView
                        android:id="@+id/person_name9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/person_photo9"
                        android:text="Andrea Galvan"
                        android:textColor="@color/PrimaryDarck"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/person_age9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/person_name9"
                        android:layout_toRightOf="@+id/person_photo9"
                        android:text="lolitapop130"
                        android:textColor="@color/PrimaryDarck" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="383dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/blanco"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/person_age93"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xalapa-Enriquez, Veracruz"
                        android:textColor="@color/PrimaryDarck" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blanco">

                    <ImageView
                        android:id="@+id/person_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/naturia" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blanco"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/person_age932"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="La naturaleza es simplemente bella."
                        android:textColor="@color/PrimaryDarck" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="383dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:background="@color/blanco">

                    <Button
                        android:id="@+id/button10"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"
                        android:background="@color/blanco"
                        android:text="Compartir"
                        android:textColor="@color/Morado" />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/button10"
                        android:background="@color/blanco"
                        android:text="Vender"
                        android:textColor="@color/Morado" />

                    <Button
                        android:id="@+id/button9644"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="14dp"
                        android:background="@android:drawable/ic_menu_share"
                        android:textColor="@color/Morado" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blanco"
                    android:padding="16dp"></RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>